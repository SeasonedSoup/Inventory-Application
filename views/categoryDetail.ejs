<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category</title>
    <script src="../scripts/toggleDelete.js" defer></script>
    <link rel="stylesheet" href="/reset.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <a href="/categories">Go Back</a>
    <div class="topArea">
        <h1><%= category.title %></h1>
        <h2><%= category.description %></h2>
        <div class="nav">
            <button id="toggleEditBtn">Toggle Delete</button>
            <a href="/categories/<%= category.id %>/resources/create">Create Resource</a>
        </div>
    </div>
    <div class="resourceContainer">
    <div class="bottomArea">
        <li class="resourceList">
        <% resources.forEach(resource => { %>
            <ul>
                <div class="cardSmall">
                    <h3> <%= resource.title %> </h3>
                    <h4> <%= resource.description %> </h4>
                    <h3> <%=  resource.type %> </h3>
                    <div class="resourceActions">
                        <a href="/categories/<%= category.id %>/resources/<%= resource.id %>">Visit Resource</a>
                        <a href="/categories/<%= category.id %>/resources/<%= resource.id %>/update">Update Resource</a>
                    </div>
                    <form class="deleteBtn" action="/categories/<%= category.id %>/resources/<%= resource.id %>/delete" method="POST" hidden>
                        <button> Delete Resource </button>
                    </form>
                </div>
            </ul>
        <% }) %>     
        </li>
    </div>
    </div>
</body>
</html>